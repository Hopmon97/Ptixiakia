<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroun"
    tools:context=".Gewrgos2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="id" />

        <EditText
            android:id="@+id/p_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name" />

        <EditText
            android:id="@+id/p_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="surname" />

        <EditText
            android:id="@+id/p_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="password" />

        <EditText
            android:id="@+id/p_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email" />

        <EditText
            android:id="@+id/p_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address" />

        <EditText
            android:id="@+id/p_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City" />

        <EditText
            android:id="@+id/p_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country" />

        <EditText
            android:id="@+id/p_pcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postal Code" />

        <EditText
            android:id="@+id/p_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="phone" />

        <EditText
            android:id="@+id/p_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="type" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="update date" />

            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="change password" />

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="413dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#CE171516"
        android:foregroundGravity="center"
        app:backgroundTint="@color/white"
        app:menu="@menu/bottom_navigation" />


    </RelativeLayout>